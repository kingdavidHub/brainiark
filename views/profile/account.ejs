<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
<!--Import Google Icon Font-->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<!-- Compiled and minified CSS -->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP"
    crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
<link rel="stylesheet" href="/stylesheets/profile_nav.css" />
<link rel="stylesheet" href="/stylesheets/profile.css" />
<link rel="stylesheet" href="/stylesheets/footer.css" />
<link rel="stylesheet" href="/stylesheets/account.css" />
    <title>Brainiark | Settings</title>
</head>
<body>
    <header>
        <% include ../partials/user-nav %>
    </header>
        <section class="account-container">
            <div class="row">
                <div class="col s7">
                    <!-- left major settings  -->
                    <!-- username settings  -->
                    <div class="left-account-container">
                    <div class="row">
                        <form method="POST" action="/account/username" >
                            <div class="input-field col s6">
                                <input value="<%= user.username %>" id="first_name2" type="text" class="validate" name="username">
                                <label class="active" for="first_name2">Username</label>
                            </div>
                            <div class="col s6 input-field">
                                <button class="btn waves-effect waves-light" type="submit" style="background:#263238;">Submit
                                    <i class="far fa-smile-wink right"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                    <!-- password settings  -->
                    <div class="row">
                        <form>
                            <div class="input-field col s6">
                                <input id="password" type="password" class="validate">
                                <label for="password">Password</label>
                            </div>
                            <div class="col s6 input-field">
                                <button class="btn waves-effect waves-light" type="submit" style="background:#263238;">Submit
                                <i class="fas fa-lock right"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                   
                    <!-- profile picture settings  -->
                    <div class="row">
                        <form action="/account/image" method="POST" enctype="multipart/form-data">
                            <div class="file-field input-field col s6">
                                <div class="btn">
                                    <span>File</span>
                                    <input type="file" name="profile_picture">
                                </div>
                                <div class="file-path-wrapper ">
                                    <input class="file-path validate" type="text" placeholder="Upload Your New Profile Picture">
                                </div>
                            </div>
                            <div class="col s6 input-field">
                                <button class="btn waves-effect waves-light" type="submit" style="background:#263238;">Submit
                                    <i class="far fa-file-image right"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                </div>
                <div  class="col s4 offset-s1">
                    <div class="right-account-container">
                        <div class="image-container">
                            <img src="<%= user.profile_picture%>" alt="user profile picture" class="responsive-img materialboxed" height=100
                                width=100 />
                        </div>
                        <span>Username: <%= user.username%></span>
                        <span>Email: <%= user.email%></span>
                    </div>
                    
                </div>
            </div>
        </section>

    <footer class="page-footer">
        <% include ../partials/footer %>
    </footer>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
    <script src="/js/footer.js"></script>
    <script src="/js/profile_nav.js"></script>
    <script>
        $(document).ready(() => {
            $('.sidenav').sidenav();
            M.updateTextFields();
            $('.sidenav').sidenav();
            $('.parallax').parallax();
            $('.materialboxed').materialbox();
            $('.scrollspy').scrollSpy();
            $('.tabs').tabs();
        });
    </script>  
</body>
</html>